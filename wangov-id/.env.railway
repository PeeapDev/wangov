# WanGov ID Environment Variables for Railway Deployment
NODE_ENV=production

# API URLs for microservices
FINANCE_API_URL=https://finance.wangov.gov.sl
TAX_API_URL=https://tax.wangov.gov.sl
SSO_API_URL=https://sso.wangov.gov.sl
NCRA_API_URL=https://ncra.wangov.gov.sl

# Internal Railway URLs for service-to-service communication
# These use Railway's internal networking
INTERNAL_FINANCE_URL=https://finance-service.railway.internal
INTERNAL_TAX_URL=https://tax-service.railway.internal
INTERNAL_SSO_URL=https://sso-service.railway.internal
INTERNAL_NCRA_URL=https://ncra-service.railway.internal

# Database connection (will be set through Railway UI)
DATABASE_URL=postgresql://user:password@database-host.railway.internal:5432/wangov

# JWT settings
JWT_SECRET=change_this_to_a_secure_secret
JWT_EXPIRES_IN=7d

# CORS settings
CORS_ORIGIN=https://wangov.gov.sl,https://www.wangov.gov.sl

# Port - Railway will override this
PORT=3000

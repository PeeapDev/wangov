# WanGov NCRA Environment Variables for Railway Deployment
NODE_ENV=production

# API URLs for microservices
MAIN_APP_URL=https://wangov.gov.sl
SSO_API_URL=https://sso.wangov.gov.sl
FINANCE_API_URL=https://finance.wangov.gov.sl

# Internal Railway URLs for service-to-service communication
INTERNAL_MAIN_APP_URL=https://wangov-id-service.railway.internal
INTERNAL_SSO_URL=https://sso-service.railway.internal
INTERNAL_FINANCE_URL=https://finance-service.railway.internal

# Database connection (will be set through Railway UI)
DATABASE_URL=postgresql://user:password@database-host.railway.internal:5432/ncra

# JWT settings
JWT_SECRET=change_this_to_a_secure_secret
JWT_EXPIRES_IN=7d

# CORS settings
CORS_ORIGIN=https://wangov.gov.sl,https://www.wangov.gov.sl,https://ncra.wangov.gov.sl

# Port - Railway will override this
PORT=3000
